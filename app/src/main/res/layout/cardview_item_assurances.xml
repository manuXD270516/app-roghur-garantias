<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:layout_height="150dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        >

        <ImageView
            android:padding="10dp"
            android:id="@+id/img_product_assurances_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="65"
            android:src="@mipmap/barcode_product"/>

        <LinearLayout
            android:layout_weight="35"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/product_name_assurances_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:text="Producto"
                ></TextView>

            <TextView
                android:id="@+id/client_full_name_assurances_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:text="Nombre Completo Cliente"
                android:textSize="13dp"
                ></TextView>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="0.9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Estado"
                    android:layout_marginBottom="5dp"
                    ></TextView>

                <TextView
                    android:layout_weight="0.3"
                    android:id="@+id/current_state_assurance_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="textEnd"
                    android:text="Garantia ..."
                    android:layout_marginBottom="5dp"
                    ></TextView>
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="0.75"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Fecha"
                    android:textAlignment="textStart"
                    android:layout_marginBottom="5dp"
                    ></TextView>

                <TextView
                    android:layout_weight="0.3"
                    android:id="@+id/currant_state_date_assurance_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textSize="13dp"
                    android:text="01/01/2020"
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="5dp"
                    ></TextView>




            </LinearLayout>

            <RatingBar
                android:id="@+id/rating_product"
                android:numStars="5"
                android:max="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleIndicator" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>